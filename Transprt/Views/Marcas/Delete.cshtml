@model Transprt.Data.Marca

@{
    ViewBag.Title = "Eliminar marca: " + Model.nombre;
    Layout = "~/Views/Shared/_LayoutContent.cshtml";
    ViewBag.Header = Model.nombre;
    ViewBag.SubTitle = "¿Estás seguro de eliminar esta marca?";

    var listMessages = new List<MvcHtmlString>();
    Html.RenderPartial("/Views/Partials/_ValidationMessage.cshtml", listMessages);
}
<div class="infoInterna">
    <h4>Marca</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.nombre)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.nombre)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Eliminar Marca" class="btn btn-default" /> |
            @Html.ActionLink("Regresar a lista de marcas", "Index")

        </div>
    }
</div>

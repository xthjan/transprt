@using Transprt.Data
@model Estado
@using (Ajax.BeginForm("EditState", "Pais"
                , new AjaxOptions { UpdateTargetId = "listaEstados", InsertionMode = InsertionMode.Replace, OnSuccess = "ClearText" }
                , new { @style = "margin:0em" })) {
    <div class="col-md-5">
        @Html.HiddenFor(estado => estado.id_pais)
        @Html.HiddenFor(estado => estado.id)
        @Html.HiddenFor(estado => estado.usr_crea)
        @Html.HiddenFor(estado => estado.fec_crea)
        @Html.EditorFor(estado => estado.nombre, new { htmlAttributes = new { @class = "form-control", @id = "nombreEstado_" + Model.id, @style = "height: 2.1em;" } })
    </div>
    <input type="submit" value="Guardar Estado" />
}
